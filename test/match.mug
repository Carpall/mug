use "shell.mug";
use "bag.mug";
define type random = "valuetype [mscorlib]System.Random";

const str help =
"--help|-h|-help: View this list
-something: Do something
-rand: Print random int32
-nothing: Do nothing";

func main(args: str[]): ? {
	str todo = match args[0] {
		"help" {
			return "digit `--help`|`-h`|`-help`";
		}
		"-help", "--help", "-h" {
			return help;
		}
		"-something" {
			return "something";
		}
		"-rand" {
			return rand(10);
		}
		"-nothing" {
			return "nothing";
		}
		else {
			return "";
		}
	};
	io::println(todo);
}
func rand(max: i32): i32 {
	return random().Next(max);
}