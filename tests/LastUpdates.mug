import std.err.*;
import std.io.*;

var io: IO = IO();

func main()
{
	const prompt: str = "Index of char to print in the text 'ciao': ";

	var arr: [chr] = new [chr, 4] { 'c', 'i', 'a', 'o' };
	var index: Err[u32] = io.readu32(prompt);

	while index.is_err()
	{
		io.println("Invalid number");
		index = io.readu32(prompt);
	}

	var c: Err[chr] = arr[index.discard()];

	if c.is_err()
		{ io.println("Invalid index"); }
	else
		{ io.println("Char: "+c.discard().to_str()); }
}